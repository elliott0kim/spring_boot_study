<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="sumichan.sumichan.mapper.client.BentoMapper">

    <select id="findBentoList" resultType="sumichan.sumichan.dto.client.BentoResDto">
        SELECT
        Bento,
        PathURL,
        Description,
        Price
        FROM
        Bentos
    </select>

    <select id="findBentoDetail" parameterType="hashmap" resultType="sumichan.sumichan.dto.client.BentoResDto">
        SELECT
        Bento,
        PathURL,
        Description,
        Price
        FROM
        Bentos
        WHERE
        Bento=#{bentoId}
    </select>

</mapper>
